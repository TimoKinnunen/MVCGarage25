<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Member.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleType.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </th>
        @if (ViewBag.DetailedView)
        {
            <th>
                @Html.DisplayNameFor(model => model.NumberOfWheels)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandAndModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.IsCheckedOut)
        </th>
