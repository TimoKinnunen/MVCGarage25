            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndParkingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingCostPerHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingCost)
            </th>
        }
