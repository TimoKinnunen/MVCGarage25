@model IEnumerable<MVCGarage25.Models.Vehicle>

@{
    ViewBag.Title = "Vehicles in the garage";
}

<h2>Vehicles in the garage</h2>

<p>
    @Html.ActionLink("Check in vehicle", "CheckIn")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Member.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleType.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCheckedOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParkingTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCheckedOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkingTime)
            </td>
            <td>
                @Html.ActionLink("View details", "Details", new { id = item.Id }, new { title = "View details for " + item.RegistrationNumber }) |
                @if (item.IsCheckedOut)
                {
                    @Html.ActionLink("Print receipt", "Receipt", new { id = item.Id }, new { title = "Print receipt for " + item.RegistrationNumber })
                }
                else
                {
                    @Html.ActionLink("Edit properties", "Edit", new { id = item.Id }, new { title = "Edit properties for " + item.RegistrationNumber }) @:|
                    @Html.ActionLink("Check out vehicle", "CheckOut", new { id = item.Id }, new { title = "Check out " + item.RegistrationNumber })
                }
            </td>
        </tr>
    }

</table>
